{
    "scopeName": "source.man",
    "fileTypes": ["manpage"],
    "repository": {
        "headings": {
            "match": "^[A-Z](?>\\S|\\s(?!\\s))*$",
            "name": "markup.heading.man"
        },
        "links": {
            "match": "((https?|ftp|file|txmt)://|mailto:)[-:@a-zA-Z0-9_.~%+/?=&#]+(?<![.?:])",
            "name": "markup.underline.link.man"
        },
        "links.internal": {
            "match": "([\\w\\.]+\\(\\d[a-z]?\\))",
            "name": "markup.underline.link.internal.man"
        },
        "textbody": {
            "patterns": [
                {
                    "include": "#links"
                },
                {
                    "include": "#links.internal"
                }
            ]
        }
    },
    "patterns": [
        {
            "include": "#headings"
        },
        {
            "include": "#textbody"
        }
    ]
}
